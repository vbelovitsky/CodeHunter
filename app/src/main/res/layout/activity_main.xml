<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.kotlin.vbel.codehunter.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="60dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.203"/>

    <ImageButton
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:padding="10dp"
            android:background="@drawable/round_button"
            android:src="@drawable/camera"
            android:scaleType="centerCrop"
            android:id="@+id/imageButtonCamera" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/imageButtonGallery"
            android:layout_marginBottom="50dp" app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:padding="10dp"
            android:background="@drawable/round_button"
            android:src="@drawable/gallery"
            android:scaleType="centerCrop"
            android:id="@+id/imageButtonGallery"
            app:layout_constraintStart_toEndOf="@+id/imageButtonCamera" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>