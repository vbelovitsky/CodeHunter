        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ImageActivity">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/test"
              android:layout_marginTop="380dp" app:layout_constraintTop_toTopOf="parent"
              tools:layout_editor_absoluteX="37dp"/>

    <ImageView android:layout_width="match_parent" android:layout_height="200dp"
               tools:layout_editor_absoluteX="0dp" android:layout_marginTop="76dp"
               app:layout_constraintTop_toTopOf="parent"
               android:scaleType="centerCrop"
               android:id="@+id/testImage"/>

</androidx.constraintlayout.widget.ConstraintLayout>